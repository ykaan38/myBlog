@model myBlog.Models.About

<section class="about-section">
    <h2>About Me</h2>
    <br />
    @if (Session["admin"] != null)
    {
        <a href="@Url.Action("EditAbout", "Home")" class="btn btn-warning">Düzenle</a>
    }
    <img src="@Model.ProfileImageUrl" alt="Profile" width="200" />
    <h3>@Model.FullName</h3>
    <p>@Model.ShortDescription</p>
    <p>@Model.LongDescription</p>

    <p>
        <a href="@Model.GithubLink" target="_blank">GitHub</a> |
        <a href="@Model.LinkedInLink" target="_blank">LinkedIn</a>
    </p>
</section>


<style>
    .about-section {
        max-width: 800px;
        margin: 50px auto;
        padding: 30px;
        background-color: #f9f9f9;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        .about-section h2 {
            font-size: 32px;
            margin-bottom: 20px;
            color: #333;
        }

        .about-section img {
            border-radius: 50%;
            border: 4px solid #ddd;
            margin-bottom: 20px;
            transition: transform 0.3s ease;
        }

            .about-section img:hover {
                transform: scale(1.05);
            }

        .about-section h3 {
            font-size: 24px;
            margin-bottom: 10px;
            color: #444;
        }

        .about-section p {
            font-size: 16px;
            color: #555;
            margin-bottom: 10px;
        }

        .about-section a {
            color: #007bff;
            text-decoration: none;
            margin: 0 10px;
        }

            .about-section a:hover {
                text-decoration: underline;
            }
</style>
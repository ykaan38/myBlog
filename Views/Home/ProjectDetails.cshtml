@model myBlog.Models.Projects

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="detail-container">

    <a href="@Url.Action("Projects", "Home")" class="back-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 12H5M12 19l-7-7 7-7" /></svg>
        Projelerime Dön
    </a>

    <div class="detail-header">
        <h1 class="detail-title">@Model.Title</h1>

        <div class="detail-meta">
            <span class="date">📅 @(Model.CreatedDate.HasValue ? Model.CreatedDate.Value.ToString("dd MMMM yyyy") : "")</span>

            <div class="tags">
                @if (!string.IsNullOrEmpty(Model.Tags))
                {
                    foreach (var tag in Model.Tags.Split(','))
                    {
                        <span class="detail-tag">@tag.Trim()</span>
                    }
                }
            </div>
        </div>
    </div>

    <div class="detail-image-wrapper">
        <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://via.placeholder.com/800x400" : Model.ImageUrl)" alt="@Model.Title" class="detail-image" />
    </div>

    <div class="detail-content">
        <p>@(string.IsNullOrEmpty(Model.Content) ? Model.Description : Model.Content)</p>
    </div>

    <div class="detail-actions">
        @if (!string.IsNullOrEmpty(Model.GithubLink) && Model.GithubLink != "#")
        {
            <a href="@Model.GithubLink" target="_blank" class="github-btn">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" /></svg>
                Kodları İncele (GitHub)
            </a>
        }
    </div>

    @if (!string.IsNullOrEmpty(Model.DemoLink))
    {
        <div class="demo-wrapper">

            <div class="text-center">
                <button onclick="toggleDemo()" id="btnDemo" class="btn-demo">
                    <span id="demoIcon">⚡</span>
                    <span id="demoText">Canlı Önizlemeyi Başlat</span>
                </button>
            </div>

            <div id="demoContainer" class="demo-container" style="display: none;">
                <div class="browser-bar">
                    <div class="browser-dots">
                        <span class="dot red"></span>
                        <span class="dot yellow"></span>
                        <span class="dot green"></span>
                    </div>
                    <span class="address-bar">Canlı Önizleme Modu: @Model.Title</span>
                </div>
                <iframe src="@Model.DemoLink" class="project-frame"></iframe>
            </div>

            <div style="text-align: center; margin-top: 15px;">
                <a href="@Model.DemoLink" target="_blank" class="btn-fullscreen">
                    Projeyi Tam Ekranda Aç ↗
                </a>
            </div>
        </div>
    }
</div>

<script>
    function toggleDemo() {
        var container = document.getElementById("demoContainer");
        var btn = document.getElementById("btnDemo");
        var btnText = document.getElementById("demoText");
        var btnIcon = document.getElementById("demoIcon");

        if (container.style.display === "none") {
            container.style.display = "block";
            btnText.innerHTML = "Önizlemeyi Kapat";
            btnIcon.innerHTML = "❌";
            btn.classList.add("active-state");

            // Yumuşak kaydırma
            setTimeout(() => {
                container.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }, 100);
        } else {
            container.style.display = "none";
            btnText.innerHTML = "Canlı Önizlemeyi Başlat";
            btnIcon.innerHTML = "⚡";
            btn.classList.remove("active-state");
        }
    }
</script>

<style>
    /* GENEL DÜZEN */
    .detail-container {
        max-width: 900px;
        margin: 3rem auto;
        padding: 0 20px;
        font-family: 'Poppins', sans-serif;
    }

    /* GERİ DÖN BUTONU */
    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 2rem;
        color: #64748b;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
        padding: 8px 16px;
        border-radius: 50px;
        background: #f1f5f9;
    }
    .back-link:hover {
        color: #2563eb;
        background: #e0f2fe;
        transform: translateX(-5px);
    }

    /* BAŞLIK ALANI */
    .detail-header { text-align: center; margin-bottom: 2rem; }

    .detail-title {
        font-size: 3rem;
        font-weight: 800;
        color: #1e293b;
        margin-bottom: 1rem;
        letter-spacing: -1px;
        background: -webkit-linear-gradient(45deg, #1e293b, #334155);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .detail-meta {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        flex-wrap: wrap;
    }

    .date {
        color: #64748b;
        font-size: 0.95rem;
        background: white;
        padding: 5px 15px;
        border-radius: 20px;
        border: 1px solid #e2e8f0;
    }

    .tags { display: flex; gap: 8px; }
    .detail-tag {
        background: #eff6ff;
        color: #2563eb;
        padding: 5px 15px;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 600;
        border: 1px solid #bfdbfe;
    }

    /* RESİM */
    .detail-image-wrapper {
        width: 100%;
        margin-bottom: 2.5rem;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.15);
        background-color: #f8fafc;
        border: 1px solid #e2e8f0;
    }
    .detail-image {
        width: 100%;
        max-height: 500px;
        object-fit: cover;
        object-position: top center;
        display: block;
    }

    /* İÇERİK */
    .detail-content {
        font-size: 1.15rem;
        line-height: 1.8;
        color: #334155;
        margin-bottom: 3rem;
        white-space: pre-line;
    }

    /* GITHUB BUTONU - YENİ TASARIM */
    .detail-actions {
        display: flex;
        justify-content: center;
        margin-bottom: 40px;
    }

    .github-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background: #24292f;
        color: white;
        padding: 14px 30px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    .github-btn:hover {
        background: #000;
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }

    /* DEMO ALANI */
    .demo-wrapper {
        margin-top: 2rem;
        padding-top: 3rem;
        border-top: 2px dashed #e2e8f0;
    }

    /* CANLI DEMO BUTONU - YENİ TASARIM */
    .btn-demo {
        background: linear-gradient(135deg, #2563eb 0%, #4f46e5 100%);
        color: white;
        padding: 18px 45px;
        font-size: 1.2rem;
        font-weight: 700;
        border: none;
        border-radius: 50px;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 10px 25px -5px rgba(37, 99, 235, 0.5);
        display: inline-flex;
        align-items: center;
        gap: 12px;
        letter-spacing: 0.5px;
    }

    .btn-demo:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 20px 35px -5px rgba(37, 99, 235, 0.6);
        filter: brightness(1.1);
    }

    .btn-demo.active-state {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        box-shadow: 0 10px 25px -5px rgba(239, 68, 68, 0.5);
    }

    /* DEMO PENCERESİ */
    .demo-container {
        margin-top: 2.5rem;
        border: 1px solid #cbd5e1;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        background: white;
        animation: slideUp 0.6s ease;
    }
    @@keyframes slideUp {
        from { opacity: 0; transform: translateY(40px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .browser-bar {
        background: #f8fafc;
        padding: 12px 20px;
        display: flex;
        align-items: center;
        gap: 15px;
        border-bottom: 1px solid #e2e8f0;
    }

    .browser-dots { display: flex; gap: 6px; }
    .dot { width: 12px; height: 12px; border-radius: 50%; }
    .red { background: #ef4444; }
    .yellow { background: #f59e0b; }
    .green { background: #10b981; }

    .address-bar {
        background: white;
        padding: 6px 15px;
        border-radius: 6px;
        font-size: 0.85rem;
        color: #64748b;
        flex-grow: 1;
        text-align: center;
        border: 1px solid #e2e8f0;
        font-family: monospace;
    }

    .project-frame { width: 100%; height: 650px; border: none; }

    /* TAM EKRAN LİNKİ */
    .btn-fullscreen {
        display: inline-block;
        color: #64748b;
        text-decoration: none;
        font-size: 0.95rem;
        font-weight: 500;
        border-bottom: 2px solid transparent;
        transition: all 0.2s;
        padding-bottom: 2px;
    }
    .btn-fullscreen:hover {
        color: #2563eb;
        border-bottom-color: #2563eb;
    }
</style>